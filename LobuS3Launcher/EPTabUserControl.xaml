<UserControl
	x:Class="LobuS3Launcher.Tabs.EPTabUserControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:LobuS3Launcher.Tabs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<StackPanel>

		<Button
			x:Name="enableEPButton"
			MinWidth="{Binding Path=ActualWidth, ElementName=disableEPButton}"
			Margin="0,10,0,0"
			HorizontalAlignment="Left"
			Click="EnableEPButton_Click">
			Enable EP Selection
		</Button>
		<Button
			x:Name="disableEPButton"
			MinWidth="{Binding Path=ActualWidth, ElementName=enableEPButton}"
			Margin="0,10,0,0"
			HorizontalAlignment="Left"
			Click="DisableEPButton_Click">
			Disable EP Selection
		</Button>

	</StackPanel>
</UserControl>
