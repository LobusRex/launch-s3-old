<UserControl
	x:Class="LobuS3Launcher.Tabs.ModsTab"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:LobuS3Launcher.Tabs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<ScrollViewer>
		<StackPanel>

			<GroupBox Header="Package Mods">
				<StackPanel>

					<TextBlock TextWrapping="Wrap">Select mods.</TextBlock>

					<StackPanel x:Name="modsContainer" />

					<Button
						x:Name="addModButton"
						Margin="0,10,0,0"
						Click="AddModButton_Click">
						Add mods
					</Button>

				</StackPanel>
			</GroupBox>

			<GroupBox>
				<TextBlock TextWrapping="Wrap">
					<Hyperlink Click="Hyperlink_Click">
						Manage mod selection
					</Hyperlink>
				</TextBlock>
			</GroupBox>

		</StackPanel>
	</ScrollViewer>
</UserControl>
